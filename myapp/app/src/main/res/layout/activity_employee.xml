<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluri"
    tools:context=".employee">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="129dp"
        android:gravity="center"
        android:text="Select Your Profile"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="338dp"
        android:background="@color/colorPrimary"
        android:text="OK"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emp4"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/emp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="178dp"
        android:text="Employee"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <CheckBox
        android:id="@+id/emp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="212dp"
        android:text="Team Leader"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emp1" />

    <CheckBox
        android:id="@+id/emp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="172dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="250dp"
        android:text="Manager"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emp2" />


    <CheckBox
        android:id="@+id/emp4"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_marginStart="172dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="280dp"
        android:text="Owner"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emp3" />


</RelativeLayout>